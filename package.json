{
  "name": "gaya-bazzar",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "babel-preset-es2015": "^6.24.1",
    "clean-webpack-plugin": "^1.0.1",
    "css-loader": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "5.6.0",
    "eslint-config-web-react": "git+ssh://git@github.com/shubh34/eslint-config-web-react.git#develop",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.0.0",
    "pre-git": "^3.17.1",
    "prettier": "^1.17.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "scripts": {
    "start": "webpack-dev-server --mode='development' --config webpack.dev.config --open",
    "build": "webpack --config webpack.dev.config",
    "lint": "esw ./src --color",
    "dev:build": "webpack --config webpack.dev.config",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --colors",
    "format": "prettier --config ./.prettierrc --write ./src/**/*.js"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "release": {
    "analyzeCommits": "simple-commit-message"
  },
  "config": {
    "pre-git": {
      "pre-commit": [
        "npm run lint",
        "npm run format"
      ],
      "pre-push": [
        "npm run test"
      ],
      "post-commit": [],
      "post-checkout": [],
      "post-merge": []
    }
  }
}
